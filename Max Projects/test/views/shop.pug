extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    if products.length > 0
        .grid
            each product in products    
                main
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                            div.card__image 
                                img(src="https://www.publicbooks.org/wp-content/uploads/2017/01/book-e1484158615982.jpg", alt="book")
                            div.card__content
                                h2.product__price $19.99
                                p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Architecto perferendis quas quia! Delectus laborum velit nam laboriosam assumenda.
                                div.card__actions
                                    button.btn Add to cart
    else 
        .grid 
            h1.heading-1 No Products
