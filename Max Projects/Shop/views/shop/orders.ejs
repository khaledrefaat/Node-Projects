<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (orders.length <= 0) {%>
        <h1>No Orders!</h1>
    <% } else { %>
        <ul>
        <% orders.forEach(order => { %>
            <li>
            <h1># <%= order._id %> </h1>
            <ul>
                <% order.items.forEach(product => { %>
                    
                    <li>  
                        <div>
                            <%= product.title %>
                        </div>
                        <div>
                            <%= product.price %>$
                        </div>
                        <div>( <%= product.quantity %> )</div>
                    </li>
                <% }) %>
            </ul>
    </li>
        <% }) %>
        </ul>
    <% } %>
</main>
<%- include('../includes/ends.ejs') %>