<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/order.css" />
</head>
<body>
<%- include('../includes/navigation.ejs') %>
<main>
    <% if (orders.length <= 0) {%>
        <h1>No Orders!</h1>
    <% } else { %>
        <ul >
        <% orders.forEach(order => { %>
            <li>
            <h1># <%= order._id %> </h1>
            <ul class="order-list">
                <li class="order-item">
                    <div>Title</div>
                    <div>Price</div>
                    <div>Quantity</div>
                </li>
                <% order.products.forEach(p => { %>
                    
                    <li class="order-item">  
                        <div>
                            <%= p.product.title %>
                        </div>
                        <div>
                            <%= p.product.price %>$
                        </div>
                        <div>( <%= p.quantity %> )</div>
                    </li>
                <% }) %>
            </ul>
            <hr>
    </li>
        <% }) %>
    </ul>
    <h2 style="text-align: center;">Total Price: <%= orders.total %>$</h2>
    <% } %>
</main>
<%- include('../includes/ends.ejs') %>