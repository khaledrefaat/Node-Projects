<%- include('../includes/head.ejs') %>
</head>
<%- include('../includes/navigation.ejs') %>
<div class="card product__item--details">
    <div class="card__header">
      <h1 class="product__title"><%= product.title %></h1>
    </div>
    <div class="cart__image product__image--details">
      <img
        src="<%= product.imageUrl %>"
        alt="A Book"
      />
    </div>
    <div class="card__content card__content--details">
      <h2 class="product__price">$<%= product.price %></h2>
      <p class="product__description--details">
        <%= product.description %>
      </p>
    </div>
    <div class="card__actions">
      <%- include('../includes/addToCart.ejs', {product}) %>
    </div>
  </div>
<%- include('../includes/ends.ejs') %>